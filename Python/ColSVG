import cv2



cap = cv2.VideoCapture(0)                                                       # Camera object

while True:
    ret, img = cap.read()

    Bright = cv2.cvtColor(img, cv2.COLOR_BGR2HSV)



    cv2.imshow('BRIGHTNESS', Bright[:, :, 2])
    cv2.imshow('BLUE', img)

    if cv2.waitKey(1) & 0xFF == ord('q'):  # Quit if the key is Q
        break
cap.release()
cv2.destroyAllWindows()
